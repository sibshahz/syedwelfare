// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String @unique
  password String
  role     Role    @default(USER)
}

model Member {
  id         String  @id @default(cuid())
  cnic       String @unique
  name       String
  profilePic String?
  cnicFront  String?
  cnicBack   String?
  fatherName String?
  phone      String
  address    String?
  city       String?
  email      String?
  role       Role    @default(MEMBER)

  @@index([cnic,phone])
}

model MemberMedia {
  id             String @id 
  profilePicId   String?
  cnicFrontId    String?
  cnicBackId     String?
}
enum Role {
  ADMIN
  USER
  MEMBER
}
